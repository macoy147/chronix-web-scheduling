{
  "name": "chronix",
  "version": "1.0.0",
  "type": "module",
  "description": "CHRONIX Scheduling System Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Frontend build not required'",
    "build-css": "sass public/css/splash-screen.scss public/css/splash-screen.css --no-source-map",
    "watch-css": "sass --watch public/css/splash-screen.scss public/css/splash-screen.css --no-source-map",
    "dev-with-css": "npm run build-css && nodemon server.js"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "mongoose": "^8.4.0",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "sass": "^1.94.2"
  }
}
